<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Welcome
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" type="text/css" />
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse col-md-10" id="navbarCollapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'home'%}active{% endif %}" aria-current="page" href="{{ path('home') }}">Home</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse col-auto">
                    <ul class="navbar-nav">
                        {% if is_granted("ROLE_USER") %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logout') }}">Welcome {{ app.user.name }}, Logout</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'login'%}active{% endif %}" href="{{ path('login') }}">Login</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <main class="container">
            <p>&nbsp;</p>
            {% block body %}{% endblock %}
        </main>
        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
        {% endblock %}
    </body>
</html>
